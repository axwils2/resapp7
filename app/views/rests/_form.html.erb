<%= form_for([@user, @user.rests.build]) do |f| %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %><br />
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :category %><br />
		<%= f.text_field :category %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>