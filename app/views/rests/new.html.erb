<%= form_for([current_user, current_user.rests.build]) do |f| %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %><br />
		<%= f.text_field :address %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>